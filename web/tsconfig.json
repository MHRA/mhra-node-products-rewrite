{
  "compilerOptions": {
    "target": "ES5",
    "module": "esnext",
    "lib": [
      "dom",
      "ESNext"
    ],
    "jsx": "preserve",
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "pretty": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true
  },
  "exclude": [
    "node_modules",
    "config"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx, **/*.md"
  ],
  "typeRoots": [
    "node_modules/@types",
    "./typings.d.ts"
  ]
}
